<style type="text/css">
  .settings {
    margin-top: 1em;
  }
  .box {
    border: thin solid #8DC63F;
    height: 75px;
    padding-top: 25px;
  }
  .smalltext a {
    color: #fff;
  }
</style>

<div class="row">
  <h2 class="small-12 columns">
    <span class="sectionheader2">PROFILE</span>
  </h2>
</div>


<div class="row">
  <div class="small-1 small-offset-1 columns text-left margin columns">
    <div class="icon">
      <%= image_tag 'penwhite.svg', width: 12 %>
    </div>
  </div>
  <div class="small-10 columns">
    <span class="profiletext">LOCATION: NASHVILLE, TN</span>
  </div>
</div>

